@model IEnumerable<GFS.Models.Payment>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Payments</h2>
<div align="right">
    <table>
        <tr>
            @using (Html.BeginForm())
            {
                <td>Find by Policy Number: </td>
                <td>@Html.TextBox("SearchString")</td>
                <td><input type="submit" value="Search" class="btn btn-primary"></td>
            }
        </tr>
    </table>
</div>

<div>
    <input type="button" value="Capture Payment" class="btn btn-success" onclick="@("window.location.href='" + @Url.Action("Search", "Payments") + "'");" />
</div>
<br />

<table class="table table-bordered table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.policyNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.plan)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dueAmount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.outstandingAmount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.datePayed)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cashierName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.branch)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.policyNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.plan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dueAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.outstandingAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.datePayed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cashierName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.branch)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.referenceNo }) |
                @Html.ActionLink("Details", "Details", new { id = item.referenceNo }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.referenceNo })
            </td>
        </tr>
    }

</table>
